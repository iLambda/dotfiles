exec_always xinput set-prop $touchpad "libinput Natural Scrolling Enabled" 1
exec_always xinput set-prop $touchpad "libinput Disable While Typing Enabled" 0    
exec_always xinput set-prop $touchpad "libinput Middle Emulation Enabled" 1

